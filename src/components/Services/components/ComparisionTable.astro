---
interface Props {
	features: {
		featureName: string;
		availabilty: boolean[];
	}[];
	headers: {
		header: string;
		price?: number;
	}[];
}

const { features, headers } = Astro.props;
---

<div id="detailed-pricing" class="overflow-x-auto w-full mb-4">
	<div class="overflow-hidden min-w-max">
		<!-- HEADERS -->
		<div
			class="grid grid-cols-4 gap-x-16 p-4 text-sm font-medium text-sky-900 bg-sky-50 border-t border-b border-sky-900/20 dark:bg-gray-800 dark:border-gray-700 dark:text-slate-200"
		>
			{headers.map((header) => <div class="text-center">{header.header} {header.price && (
				<b> - Desde {header.price}</b>
			)}</div>)}
		</div>
		<!-- FEATURES -->

		{
			features.map((feature) => (
				<div class="grid grid-cols-4 gap-x-16 py-5 px-4 text-sm text-gray-700 border-b border-sky-900/20 dark:border-gray-700">
					<div class="text-gray-500 dark:text-gray-400">
						{feature.featureName}
					</div>
					{/* AVAILABILITY */}
					{feature.availabilty.map((each) => (
						<div class="flex items-center justify-center">
							{each ? (
								<svg
									class="w-5 h-5 text-green-500"
									aria-hidden="true"
									fill="currentColor"
									viewBox="0 0 20 20"
									xmlns="http://www.w3.org/2000/svg"
								>
									<path
										fill-rule="evenodd"
										d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
										clip-rule="evenodd"
									/>
								</svg>
							) : (
								<svg
									class="w-5 h-5 text-red-500"
									aria-hidden="true"
									fill="currentColor"
									viewBox="0 0 20 20"
									xmlns="http://www.w3.org/2000/svg"
								>
									<path
										fill-rule="evenodd"
										d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
										clip-rule="evenodd"
									/>
								</svg>
							)}
						</div>
					))}
				</div>
			))
		}
		<!-- BUTTONS -->
		<div
			class="grid grid-cols-4 gap-x-16 py-5 px-4 text-sm text-gray-700 border-b border-gray-200 dark:border-gray-700"
		>
			<div></div>
			{
				features[0].availabilty.map((e) => (
					<div>
						<a
							target="_blank" href="https://wa.me/message/6JVWCHU4HSP2B1"
							class="text-white block w-full bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-200 font-medium rounded-lg text-sm px-4 py-2.5 text-center dark:focus:ring-blue-900"
						>
							Solicitar ahora
						</a>
					</div>
				))
			}
		</div>
	</div>
</div>
