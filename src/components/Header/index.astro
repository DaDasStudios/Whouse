---
import Elements from "./Elements";
import MenuDropDown from "./MenuDropDown.astro";
---

<header>
	<nav class="bg-white border shadow-sm border-gray-200 dark:border-gray-600/50 dark:bg-dark-primary">
		<div
			class="flex flex-wrap justify-items-center justify-between min-[768px]:justify-center min-[1076px]:justify-between items-center mx-auto max-w-screen-xl px-4 md:px-6 py-2.5"
		>
			<a class="block min-[768px]:hidden min-[1076px]:block" href="/" >
				<div class="flex items-center hover:scale-105 hover:brightness-105 transition-all">
					<!--
					<img class="w-28" src="png/Logo.png" alt="logo image">

					 -->
					<img class="w-40 md:w-36" src="/png/Title.png" alt="title image">
				</div>
			</a>
			<button
				id="mega-menu-trigger"
				type="button"
				class="inline-flex items-center p-2 ml-1 text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
				aria-controls="mega-menu-full"
				aria-expanded="false"
			>
				<span class="sr-only">Men√∫ principal</span>
				<svg
					class="w-6 h-6"
					aria-hidden="true"
					fill="currentColor"
					viewBox="0 0 20 20"
					xmlns="http://www.w3.org/2000/svg"
					><path
						fill-rule="evenodd"
						d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
						clip-rule="evenodd"></path>
				</svg>
			</button>
			<div
				id="mega-menu-full"
				class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1"
			>
                <Elements client:only/>
			</div>
		</div>
        <MenuDropDown />
	</nav>
</header>