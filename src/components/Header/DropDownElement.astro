---
interface Props {
	href?: string;
	title: string;
	description: string;
	img: string
}

const { href = "/", title, description, img } = Astro.props;
---

<li>
	<a
		href={href}
		class="flex items-center justify-center flex-col lg:flex-row gap-3 lg:gap-4 p-3 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700"
	>
		<div>
			<div class="font-semibold">{title}</div>
			<span class="text-sm font-light text-gray-500 dark:text-gray-400"
				>{description}</span
			>
		</div>
		<img class="rounded-md shadow-md aspect-auto w-56" src={img} alt="Imagen de muebles" />
	</a>
</li>
