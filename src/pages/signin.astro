---
import MainLayout from "../layouts/MainLayout.astro";
import SignInForm from "../components/Auth/SignInForm"
---

<MainLayout>
    <div class="bg-white dark:bg-slate-900">
		<section
			class="max-w-screen-xl mx-auto py-36 px-10 flex items-center justify-between sm:gap-4 lg:gap-16"
		>
			<div 
                class="mask-light max-lg:hidden mask w-1/2 rounded-full"
                id="mask-bg"
            >
				<img
                    class="rounded-full border border-transparent"
					src="/jpg/person4.jpg"
					alt="Persona sonriendo"
				/>
			</div>

			<article class="flex-1">
				<h1
					class="text-slate-800 font-extrabold text-3xl sm:text-5xl lg:text-5xl mb-7 tracking-tight text-center dark:text-white font-roboto"
				>
					Iniciar Sesión
				</h1>
				<p
					class="text-center text-muted dark:text-dark-muted lg:text-xl my-8"
				>
					Solo si ya estás registrado o tienes una cuenta. Ingresa tus credenciales para autenticarte.
				</p>
				<SignInForm client:only />
			</article>
		</section>
    </div>
</MainLayout>
<script>
	import setTheme from "../scripts/Theme";
    const maskTag = document.getElementById("mask-bg") as HTMLElement
    setTheme(maskTag, "mask-light", "mask-dark")

</script>

